<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_vg"
    android:background="@drawable/bg_window_update_delete">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:elevation="8dp"
                android:src="@drawable/ic_verification_dialog" />

            <TextView
                android:id="@+id/txttite"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fontFamily="@font/roboto_black"
                android:gravity="center"
                android:text="Confirmação da ocorrência"
                android:textColor="@color/colorBlacky"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/corben"
                android:gravity="center_horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="Descrição"
                android:textColor="@color/colorBlacky" />

            <TextView
                android:id="@+id/editFor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDesc"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/editFor"
                android:textColor="#000"
                android:textSize="15dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"/>




        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
